<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_navigation"
    app:startDestination="@id/list">

    <fragment
        android:id="@+id/list"
        android:name="by.hometrainng.mvvmkoinhw6.fragments.BeerListFragment"
        tools:layout="@layout/fragment_beer_list">

        <action
            android:id="@+id/to_details"
            app:destination="@+id/fragment_details"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />

    </fragment>

    <fragment
        android:id="@+id/fragment_details"
        android:name="by.hometrainng.mvvmkoinhw6.fragments.BeerDetailsFragment"
        tools:layout="@layout/fragment_beer_details">

        <action
            android:id="@+id/to_info"
            app:destination="@+id/info"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />

        <argument
            android:name="beer_id"
            app:argType="integer"/>
    </fragment>

    <dialog
        android:id="@+id/info"
        android:name="by.hometrainng.mvvmkoinhw6.fragments.InfoFragment"
        tools:layout="@layout/info_fragment">

        <argument
            android:name="beer_id"
            app:argType="integer"/>

    </dialog>

</navigation>